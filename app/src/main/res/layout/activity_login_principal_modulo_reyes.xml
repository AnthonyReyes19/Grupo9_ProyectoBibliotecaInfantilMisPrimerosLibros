<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginPrincipalModuloReyes">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:backgroundTint="#CDDC39"
        android:minHeight="?attr/actionBarSize"
        android:textAlignment="center"
        android:theme="?attr/actionBarTheme"
        app:title="Menu De Actividades y Juegos" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="132dp"
        android:layout_height="203dp"
        android:layout_marginTop="368dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            app:srcCompat="@mipmap/dibujoicon_foreground" />

        <Button
            android:id="@+id/btnDibujo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dibujo" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="167dp"
        android:layout_height="265dp"
        android:layout_marginTop="84dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.864"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:srcCompat="@mipmap/juegosicon" />

        <Button
            android:id="@+id/btnJuegos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver Juegos" />

        <Button
            android:id="@+id/btnRegistroJUegos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registro" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="172dp"
        android:layout_height="267dp"
        android:layout_marginTop="84dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="match_parent"
            android:layout_height="157dp"
            app:srcCompat="@mipmap/juegoss" />

        <Button
            android:id="@+id/btnCuento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver Cuentos" />

        <Button
            android:id="@+id/btnRegistroCuento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="registrarCuento"
            android:text="Registro" />

    </LinearLayout>

    <Button
        android:id="@+id/btnVolverPrincipal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="576dp"
        android:onClick="regresar"
        android:text="Volver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>