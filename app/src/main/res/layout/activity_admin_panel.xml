<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:gravity="center"
    android:onClick="RegresarAdminAMain"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".Modulo5.Administracion.AdminPanelActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Opciones"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="324dp"
        android:layout_height="426dp"
        android:orientation="vertical">


        <Button
            android:id="@+id/btnSubirLibro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:padding="18dp"
            android:text="Subir nuevo libro"
            android:textColor="#3b84F1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnVerPerfiles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/white"
            android:padding="18dp"
            android:text="Ver perfiles infantiles"
            android:textColor="#3b84F1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnRegresar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/white"
            android:onClick="RegresarAdminAMain"
            android:padding="18dp"
            android:text="Regresar"
            android:textColor="#3b84F1"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>