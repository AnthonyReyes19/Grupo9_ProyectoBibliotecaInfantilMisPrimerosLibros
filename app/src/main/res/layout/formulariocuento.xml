<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="396dp"
        android:layout_height="488dp"
        android:layout_marginTop="36dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/reg_txtcedula"
            android:layout_width="382dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Id"
            android:inputType="number" />

        <EditText
            android:id="@+id/reg_txtnombres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Titulo del Cuento"
            android:inputType="text" />

        <EditText
            android:id="@+id/reg_txtapellidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Descripcion Corta"
            android:inputType="text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="183dp"
                    android:layout_height="wrap_content"
                    android:text="Valor a ensenar:"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/reg_contNacionalidades"
                    android:layout_width="199dp"
                    android:layout_height="27dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="183dp"
                android:layout_height="wrap_content"
                android:text="Edad recomendada:"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/reg_contGeneros"
                android:layout_width="201dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="218dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="152dp"
                    android:layout_height="match_parent"
                    android:text="Rating:"
                    android:textSize="20sp" />

                <RatingBar
                    android:id="@+id/reg_ratNivel"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/reg_btnRegistrar"
                    android:layout_width="143dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#4CAF50"
                    android:onClick="guardar"
                    android:text="Registrar" />

                <Button
                    android:id="@+id/reg_btnBorrar"
                    android:layout_width="137dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FF5722"
                    android:onClick="regresar"
                    android:text="Borrar" />

            </LinearLayout>

        </RadioGroup>

    </LinearLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="420dp"
        android:layout_height="37dp"
        android:background="#03A9F4"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:title="Registro de Cuentos" />

    <Button
        android:id="@+id/reg_btnCancelar"
        android:layout_width="164dp"
        android:layout_height="47dp"
        android:layout_marginTop="508dp"
        android:layout_weight="1"
        android:text="Cancelar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/reg_btnRecuperar"
        android:layout_width="143dp"
        android:layout_height="53dp"
        android:layout_marginTop="508dp"
        android:backgroundTint="#2196F3"
        android:text="Mostrar Registros"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.88"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>