<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="393dp"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:orientation="vertical"
        android:paddingVertical="50px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <EditText
            android:id="@+id/loginP_txtusuario"
            android:layout_width="372dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center|center_horizontal|left|center_vertical"
            android:inputType="text"
            android:paddingVertical="50px"
            android:text="Usuario" />

        <EditText
            android:id="@+id/loginP_txtclave"
            android:layout_width="372dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center|center_horizontal|left|center_vertical"
            android:inputType="text|textPassword"
            android:paddingVertical="50px"
            android:text="Clave" />

        <CheckBox
            android:id="@+id/login_chkrecordar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recordar Contrasena" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="391dp"
        android:layout_height="107dp"
        android:layout_marginTop="456dp"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/loginP_btnIngresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#03A9F4"
            android:onClick="ventanaPrueba"
            android:paddingRight="20dp"
            android:text="Ingresar" />

        <Button
            android:id="@+id/looginP_btnRegistrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#03A9F4"
            android:onClick="registrarse"
            android:text="Registrar" />
    </LinearLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:backgroundTint="#00BCD4"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="Menu Principal" />

</androidx.constraintlayout.widget.ConstraintLayout>