<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Color de fondo -->
    <solid android:color="#F5F5F5" />

    <!-- Bordes redondeados -->
    <corners android:radius="24dp" />

    <!-- Borde opcional -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0" />

    <!-- Padding interno -->
    <padding
        android:left="16dp"
        android:right="16dp"
        android:top="8dp"
        android:bottom="8dp" />

</shape>